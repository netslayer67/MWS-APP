# IntegraLearn Hub - Environment Variables

# API Configuration
VITE_API_BASE=http://localhost:3003/api/v1

# Development flags
VITE_ENABLE_MOCK=true

# Authentication
VITE_JWT_SECRET=your_jwt_secret_here

# File Upload
VITE_UPLOAD_MAX_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav,video/mp4,application/pdf

# External Services
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=
VITE_FIREBASE_CONFIG=

# Push Notifications
VITE_FCM_SERVER_KEY=
VITE_VAPID_PUBLIC_KEY=

# Email Service
VITE_EMAILJS_SERVICE_ID=
VITE_EMAILJS_TEMPLATE_ID=
VITE_EMAILJS_PUBLIC_KEY=

# Development
VITE_DEBUG=true
VITE_LOG_LEVEL=debug