# IntegraLearn Hub Frontend - Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Configuration
# Local development
# VITE_API_BASE=http://localhost:3003/api/v1
VITE_API_BASE=https://bemws-production.up.railway.app/api/v1
# Production: https://your-backend-app.railway.app/api/v1
VITE_ENABLE_MOCK=false
VITE_DEBUG=false
VITE_LOG_LEVEL=info

# Development flags
# VITE_ENABLE_MOCK=true (uncomment for mock data)
VITE_JWT_SECRET=your_jwt_secret_here
VITE_UPLOAD_MAX_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav,video/mp4,application/pdf

# Development settings (uncomment for debugging)
# VITE_DEBUG=true
# VITE_LOG_LEVEL=debug